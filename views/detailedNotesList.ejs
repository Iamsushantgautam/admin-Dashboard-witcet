<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Detailed Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .notes-container {
      max-width: 1000px;
      margin: auto;
      background-color: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    .note-block {
      background-color: #f1f5f9;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 6px;
    }
    .btn-danger:hover {
      background-color: #dc3545;
    }
  </style>
</head>
<body>

    <%- include('partials/navbar') %>

  <div class="container py-5">
    <div class="notes-container">
      <h3 class="text-center text-primary mb-4">All Detailed Notes</h3>
      
      <% if (notes.length > 0) { %>
        <% notes.forEach(note => { %>
          <div class="note-block">
            <h5 class="text-primary"><%= note.notesTitle %> (<%= note.notesCode %>)</h5>
            <p><strong>Intro Title:</strong> <%= note.introTitle %></p>
            <h6>Units:</h6>
            <ul>
              <% note.units.forEach((unit, index) => { %>
                <li><%= unit.unitTitle %> - <%= unit.ownerName %> (<%= unit.pdfLink %>)</li>
              <% }) %>
            </ul>

            <div class="d-flex justify-content-between">
              <a href="/detailednotes/edit/<%= note._id %>" class="btn btn-warning">Edit</a>
              <form action="/detailednotes/delete/<%= note._id %>" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No notes available.</p>
      <% } %>
    </div>
  </div>

</body>
</html>
